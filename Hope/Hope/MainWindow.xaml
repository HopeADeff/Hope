<Window x:Class="ArtShield.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hope-AD | AI Image Protection" Height="600" Width="800" Background="#1E1E1E"
        Icon="Hope.ico">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Text="Protection Method" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="ProtectionMethodCombo" SelectedIndex="0" Padding="5" Height="30" SelectionChanged="ProtectionMethod_Changed">
                <ComboBoxItem Content="Noise"/>
                <ComboBoxItem Content="Glaze"/>
            </ComboBox>
            <TextBlock x:Name="TargetLabel" Text="Target Description" Foreground="White" Margin="0,15,0,5"/>
            <TextBox x:Name="TargetInput" Text=" " Padding="5" Height="50" TextWrapping="Wrap"/>
            <TextBlock x:Name="StyleLabel" Text="Style:" Foreground="White" Margin="0,15,0,5" Visibility="Collapsed"/>
            <ComboBox x:Name="TargetStyleCombo" SelectedIndex="0" Padding="5" Height="30" Visibility="Collapsed">
                <ComboBoxItem Content="Abstract" Tag="abstract"/>
                <ComboBoxItem Content="Impressionist" Tag="impressionist"/>
                <ComboBoxItem Content="Cubist" Tag="cubist"/>
                <ComboBoxItem Content="Sketch" Tag="sketch"/>
                <ComboBoxItem Content="Watercolor" Tag="watercolor"/>
            </ComboBox>
            <Grid Margin="0,20,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Intensity" Foreground="White" VerticalAlignment="Center"/>
                <Border Grid.Column="1" Background="#FF4444" CornerRadius="3" Padding="6,3">
                    <TextBlock Text="{Binding Value, ElementName=IntensitySlider, StringFormat=F2}" 
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="13"/>
                </Border>
            </Grid>

            <Slider x:Name="IntensitySlider" Minimum="0.01" Maximum="0.35" Value="0.20" TickFrequency="0.01"/>

            <Grid Margin="0,2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="0.01" FontSize="9" Foreground="Gray"/>
                <TextBlock Grid.Column="1" Text="0.12" FontSize="9" Foreground="Orange" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="0.25" FontSize="9" Foreground="Red" HorizontalAlignment="Right"/>
            </Grid>
            <Grid Margin="0,15,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Iterations" Foreground="White" VerticalAlignment="Center"/>
                <Border Grid.Column="1" Background="#4444FF" CornerRadius="3" Padding="6,3">
                    <TextBlock Text="{Binding Value, ElementName=IterationSlider, StringFormat=F0}" 
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="13"/>
                </Border>
            </Grid>

            <Slider x:Name="IterationSlider" Minimum="10" Maximum="250" Value="100" TickFrequency="10" IsSnapToTickEnabled="True"/>

            <Grid Margin="0,2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="10 (fast)" FontSize="9" Foreground="Gray"/>
                <TextBlock Grid.Column="1" Text="30" FontSize="9" Foreground="LightBlue" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="250 (strong)" FontSize="9" Foreground="Gray" HorizontalAlignment="Right"/>
            </Grid>
            <Grid Margin="0,15,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Output Quality" Foreground="White" VerticalAlignment="Center"/>
                <Border Grid.Column="1" Background="#44AA44" CornerRadius="3" Padding="6,3">
                    <TextBlock Text="{Binding Value, ElementName=QualitySlider, StringFormat=F0}" 
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="13"/>
                </Border>
            </Grid>

            <Slider x:Name="QualitySlider" Minimum="85" Maximum="98" Value="92" TickFrequency="1" IsSnapToTickEnabled="True"/>

            <Grid Margin="0,2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="85 (small)" FontSize="9" Foreground="Gray"/>
                <TextBlock Grid.Column="1" Text="92" FontSize="9" Foreground="LightGreen" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="98 (best)" FontSize="9" Foreground="Gray" HorizontalAlignment="Right"/>
            </Grid>
            <Button x:Name="SelectBtn" Content="Select Image" Click="SelectImage_Click" 
                    Margin="0,20,0,0" Padding="10" 
                    Background="#333333" Foreground="White" BorderBrush="#555555"/>

            <Button x:Name="RunBtn" Content="Protect" Click="RunProtection_Click" 
                    Background="#FF4500" Foreground="White" FontWeight="Bold" 
                    Margin="0,10,0,0" Padding="10"/>
            <TextBlock x:Name="FileSizeText" Text="" Foreground="LightBlue" Margin="0,20,0,5" FontSize="11"/>
            <TextBlock x:Name="StatusText" Text="Ready" Foreground="LightGreen" Margin="0,10,0,5" FontWeight="SemiBold"/>
            <ProgressBar x:Name="ProgBar" Height="10" Margin="0,0,0,0" Background="#333333" Foreground="#FF4500"/>
        </StackPanel>
        <Border Grid.Column="1" Margin="20,0,0,0" BorderBrush="#555555" BorderThickness="2">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </Border>
    </Grid>
</Window>